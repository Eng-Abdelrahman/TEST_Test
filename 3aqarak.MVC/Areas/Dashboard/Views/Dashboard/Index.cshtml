            }

        a {
            color: #005f81;
        }
        .imageDashstyly {
            width: 27%;
            display: block;
            position: absolute;
            top: 16%;
            left:5%;
            height: 60%;
        }

        p {
            /*width: 66%;*/
            width: 75%;
        }

        a {
            text-shadow: #e8dee1 2px 2px 10px;
            color:#005f81;
        }
        
    </style>

}
 
