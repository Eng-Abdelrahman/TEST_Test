                            d.toDate = $("#dateTo").val();
                            d.SpaceFrom = $("#spaceFrom").val();
                            d.SpaceTo = $("#spaceTo").val();
                            d.PriceFrom = $("#priceFrom").val();
                            d.PriceTo = $("#priceTo").val();
                            d.Demand = $("#Demand").val();
                        },
                    },
                    "columns":
