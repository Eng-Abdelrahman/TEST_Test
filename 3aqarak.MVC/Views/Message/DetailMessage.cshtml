@model _3aqarak.MVC.ViewModels.MessageViewModel
@{
    ViewBag.Title = "DetailMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <style>



        label {
            float: right;
            font-size: 16px;
            font-weight: bold;
            clear: both;
            margin-bottom: 10px;
        }

        h4 {
            text-align: center;
            font-size: 20px;
            text-decoration: underline;
        }

        h5 {
            text-align: right;
            font-size: 16px;
            text-decoration: underline;
            font-weight: bold;
        }

        .ui-menu-item-wrapper {
            font-size: 20px;
            text-align: right;
        }
    </style>
}

<div class="card">

    <div class="card-header">
        <div class="card-header text-right">
            <nav aria-label="breadcrumb" role="navigation" style="direction :rtl">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index","Home")" style="color:#0098f0"> الصفحة الرئيسية </a></li>
                    <!-- <li class="breadcrumb-item"><a href="#">Library</a></li> -->
                    <li class="breadcrumb-item active" aria-current="page">  تفاصيل مهمة : @ViewBag.UserName </li>
                </ol>
            </nav>
        </div>

    </div>
    <div class="card-body">
        <form id="AddClientsaleForm">

            <div class="form-group">
               
                <div id="hiddenDiv">
                    <div class="row">
                        <div class="col">
                            <label for="from">بداية مدة المهمه</label>
                            <input type="date" value="@Model.DateTimeStart.ToString("yyyy-MM-dd")" id="from" class="form-control" readonly />
                        </div>
                        <div class="col">
                            <label class="text-right" for="to">إنتهاء مدة المهمه</label>
                            <input type="date" id="to" value="@Model.DateTimeEnd.ToString("yyyy-MM-dd")" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group row">
                        <h5>عنوان المهمه</h5>
                        <input type="text" class="form-control sty" id="title" value="@Model.Title" readonly/>
                    </div>

                    <div class="form-group row">
                        <h5>تفاصيل المهمه</h5>
                        <textarea class="form-control sty" id="task" rows="3" style="border :1px solid #2b3553  ; border-radius:10px" readonly>@Model.MessageContent</textarea>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-default animation-on-hover" id="mybutton">Back</button>
                        </div>
                    </div>
                </div>

            </div>
        </form>
    </div>


</div>
