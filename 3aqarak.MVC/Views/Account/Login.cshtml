@using _3aqarak.MVC.ViewModels
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,600,700,800" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
    <!-- Nucleo Icons -->
    <link href="~/Theme/assets/css/nucleo-icons.css" rel="stylesheet" />
    <!-- CSS Files -->
    <link href="~/Theme/assets/css/black-dashboard.css?v=1.0.0" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-rtl/3.4.0/css/bootstrap-rtl.css" rel="stylesheet" />
    <link href="~/Theme/assets/Plugins/icheck-1.x/icheck-1.x/skins/flat/pink.css" rel="stylesheet" />
    <style>
        div#container {
            margin-right: 6.333333%;
            margin-top: 8%;
        }



        .main-panel {
            border-top: 1px solid #27293d;
            float: right;
        }
        .white-content .card:not(.card-white) {
            background-color: #fffeeabf;
        }

        .white-content .main-panel {
            /*background-image: url('/Assets/Img/Users/myImg.jpg');*/
            background-image: url('/Assets/RealEstateImage/731844-PS62QX-464.jpg');

            /*background-size: contain;*/
            background-repeat: no-repeat;
            background-position: center center;
            background-attachment: fixed;
            background-size: cover;
        }

        .card label {
            font-weight: bolder;
        }
        .white-content p {
            color: black;
        }
       
    </style>

</head>
<body class=" rtl menu-on-right white-content ">
    <div class="wrapper">
        <div class="main-panel">
                   <div class="content"> 
                       <div class="row">
                           <div id="container" class="col-9 col-lg-offset-1">
                               <div class="card ">

                                   <div class="card-header ">
                                       <div class="row">
                                           <div class="col-sm-6 text-right">
                                               <h5 class="card-category"></h5>
                                               <h5 class="title">تسجيل الدخول</h5>
                                           </div>
                                       </div>
                                   </div>

                                   <div class="card-body">
                                       <p class="login-box-msg" style="color: @ViewBag.MessageColor;">@ViewBag.Message</p>
                                       @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", @class = "form-horizontal", role = "form" }))
                                       {
                                           @Html.AntiForgeryToken()

                                           @Html.ValidationSummary(true, "", new { @class = "text-danger text-right title " })


                                           <div class="row">
                                               <div class="col-md-10 col-lg-offset-1 ">
                                                   <div class="form-group">
                                                       @Html.LabelFor(m => m.UserName, new { @class = "text-right col-md-2 title" })
                                                       @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                                       @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                                   </div>
                                               </div>
                                           </div>
                                           <div class="row">
                                               <div class="col-md-10 col-lg-offset-1">
                                                   <div class="form-group">
                                                       @Html.LabelFor(m => m.Password, new { @class = "text-right col-md-2 title " })
                                                       @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                       @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                   </div>
                                               </div>
                                           </div>
                                           <div class="row">
                                               <div class="col-md-10 col-lg-offset-1">
                                                   <div class="form-group">

                                                   </div>
                                               </div>
                                           </div>
                                           <div class="row">
                                               <div class="col-md-3 pr-md-1">
                                                   <div class="form-group">
                                                       <div class="col-md-offset-2 ">

                                                           <div class="checkbox icheck ">
                                                               <label>
                                                                   <input id="rememberMe" name="rememberMe" type="checkbox" value="false" style="float:right"> حفظ كلمة السر
                                                               </label>
                                                           </div>
                                                       </div>
                                                   </div>
                                               </div>
                                           </div>

                                       }
                                   </div>

                                   <div class="card-footer">

                                       <div class="row">

                                           <div class="col-md-offset-1">
                                               <div class="form-group">
                                                   <input type="submit" value="Log in" class="btn btn btn-fill btn-default" form="loginForm" style="margin-right:15%;" />
                                               </div>
                                           </div>
                                       </div>
                                   </div>

                               </div>


                           </div>
                       </div>
                   </div>
               </div>
    </div>


    <script src="~/Theme/assets/js/core/jquery.min.js"></script>
    <script src="~/Theme/assets/js/core/popper.min.js"></script>
    <script src="~/Theme/assets/js/core/bootstrap.min.js"></script>
    <script src="~/Theme/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <!--  Notifications Plugin    -->
    <script src="~/Theme/assets/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Black Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Theme/assets/js/black-dashboard.min.js?v=1.0.0"></script>
    <script src="~/Theme/assets/Plugins/icheck-1.x/icheck-1.x/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_flat-pink',
                radioClass: 'iradio_square-pink',
                increaseArea: '20%' /* optional */
            })
                .on('ifChecked', function (event) {
                    $('#rememberMe').val(true);
                })
                .on('ifUnchecked', function (event) {
                    $('#rememberMe').val(false);
                });


        });

    </script>
    

</body>


</html>




