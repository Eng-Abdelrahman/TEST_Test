@section styles{
    <style>
        .myStyle {
            /*background-color: #27293d;*/
            background-color:#14bff3;
            color: white;
            height: 100px;
            width: 250px;
            margin: 20px;
            border-radius: 10px;
        }

        .linkColor {
            padding-right: 90px;
            padding-top: 40px;
            color: white;
            float: right;
        }

        .main-panel {
            border-top: 1px solid #27293d;
            float: right;
        }

        .sidebar-wrapper .ps {
            top: -35px;
        }
 
            #myCardBody .card{
              direction:rtl;
            }
            /* width */
            ::-webkit-scrollbar {
                width: 10px;
            }
 

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #27293d;
            border-radius: 10px;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
