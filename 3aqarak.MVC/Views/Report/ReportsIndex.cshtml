
@{
    ViewBag.Title = "ReportsIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles{
    <style>
        .myStyle {
            background-color: #27293d;
            color: white;
            height: 100px;
            width: 250px;
            margin: 20px;
            border-radius: 10px;
        }

        .linkColor {
            padding-right: 90px;
            padding-top: 40px;
            color: white;
            float: right;
        }

        .main-panel {
            border-top: 1px solid #27293d;
            float: right;
        }

        .cardRound {
            width: 65%;
            height: 88%;
            border-radius: 50%;
            text-align: center;
        }

        .cardImg {
            width: 33%;
            display: block;
            margin: 0% 35%;
        }

        .sidebar-wrapper .ps {
            top: -35px;
        }


        #myCardBody {
            /*background-color: yellow;*/
            overflow-y: auto;
            /*height: 700px;*/
            /*height :700px ;*/
        }

        /* width */
        ::-webkit-scrollbar {
            width: 10px;
        }

        /* Track */
        /*::-webkit-scrollbar-track {

            box-shadow: inset 0 0 5px grey;
            border-radius: 10px;
        }*/

        /* Handle */
        ::-webkit-scrollbar-thumb {
            background: #27293d;
            border-radius: 10px;
        }

            /* Handle on hover */
            ::-webkit-scrollbar-thumb:hover {
                background: #27293d;
            }

        a {
            text-shadow: #e8dee1 2px 2px 10px;
        }
    </style>

}

<div class="card" data-step="1" data-intro="هذه الصفحه مخصصه لعرض تقارير لموظفي البيع والإيجار كلٌ على حدى في شهر معين">

    <div class=" card-header">
        <div class="card-header text-right">

            <nav aria-label="breadcrumb" role="navigation" style="direction :rtl">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index","Home")" style="color:#0098f0"> الصفحة الرئيسية </a></li>

                    <li class="breadcrumb-item active" aria-current="page"> التقارير </li>
                </ol>
            </nav>
        </div>


    </div>
    <div class="container-fluid">
        <div class="card-body" id="myCardBody">

            <div class="row ">
                <div class="col ">
                    <div class="card cardRound" style="background-color: #e4e0d99e;">
                        <div class="card-body">
                            <img class="cardImg text-center " src="~/Assets/image Units/icons8-sales-performance-96.png">
                            <a class="catbtn" href="/Report/SellEmpMonthAcheivementPage"> تقارير الانجاز لموظفي البيع</a>
                        </div>
                    </div>
                </div>
                <div class="col ">
                    <div class="card cardRound" style="background-color:#d5e2ebad;">
                        <div class="card-body">
                            <img class="cardImg text-center" src="~/Assets/image Units/icons8-sales-performance-96.png">
                            <a class="catbtn" href="/Report/RentalEmpMonthAcheivementPage"> تقارير الانجاز لموظفي الايجار</a>
                        </div>
                    </div>
                </div>
            </div> <!-- Row End-->
        </div>
    </div>
</div>

@section scripts{
    <script>
        $("document").ready(function () {
            $(".linkColor").mouseenter(function () {
                $(this).css("fontSize", "24px");
                $(this).css("color", "#0098f0");
            });
            $(".linkColor").mouseleave(function () {
                $(this).css("fontSize", "15px");
                $(this).css("color", "white");
            });
        });

          $('#flexi_form_start').click(function () {
                introJs().start().oncomplete(function() {
                }).onexit(function() {
                }).onbeforechange(function(targetElement) {
                   $(".steps").hide();                    
                 });
            });
    </script>


}



